<header>
  <div class="header__layout">
    <h1 class="header__title">No comment</h1>
    <%# <h2 class="header__sub-title">Actu Compar√©e</h2> %>
  </div>
</header>

<main>
  <div class="posts__layout">
    <div class="posts__container">
      <div class="posts__header">
        <h2 class=posts__title>Last Articles</h2>
        <%= link_to new_post_path, method: :get do %>
          <div class="btn btn--create"> + </div>
        <% end %>
      </div>

      <% @posts.each do |post|%>
        <div class="post__item">
          <h3><%= post.title %></h3>
          <a href=<%= post.official_url %>><%= post.official_url %></a> VS <a href=<%= post.opposite_url%>><%= post.opposite_url %></a>
          <div class="photo__container">
            <img src=<%= post.official_photo %> alt=<%= post.official_photo %>>
            <img src=<%= post.opposite_photo %> alt=<%= post.opposite_photo %>>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

